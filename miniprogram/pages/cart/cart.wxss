.baoyou{
  background-color: #D3D3D3;
  width: 80%;
  height: 25px;
  margin: auto;
  margin-top: 2%;
  line-height: 25px;
}
.xuanze{
  padding-top: 60%;
  padding-left: 23%;
  width: 30px;
  height: 30px;

}
.picture{
  width: 25%;
  height: 200rpx;
  float: left;
}
.round_container{
  height: 200rpx;
  width: 15%;
  float: left;
}
.detail{
  width: 100%;
  height: 100px;
  /* margin-top: 3%; */
  background-color: white;
}
.right{
  height: 200rpx;
  width: 60%;
  float: left;
  position: relative;
}
.name{
  margin-left:4% ;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.price{
  position: absolute;
  bottom: 2%;
  left: 4%;
  color: red;
}
.count{
  position: absolute;
  right: 5%;
  width: 200rpx;
  bottom: 2%;
}
.sub{
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  border: 1px solid gray;
  text-align: center;
  float: left;
  font-size: 20px;
}
.num{
  height: 50rpx;
  width: 50rpx;
  padding-right: 15rpx;
  padding-left: 15rpx;
  float: left;
  line-height: 50rpx;
  border: 1px solid gray;
  text-align: center;
  border-right: none;
  border-left: none;
}
.add{
  height: 50rpx;
  width: 60rpx;
  float: left;
  line-height: 50rpx;
  border: 1px solid gray;
  text-align: center;
  font-size: 20px;
}
.footer{
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0;
  background-color: white;
}
.all{
  margin-left: 10px;
  margin-top: 10px;
  width: 20%;
  float: left;
}
.all_text{
  margin-left: 5px;
  color: gray;
}
.clear{
  float: left;
  width: 10%;
  margin-left:3px;
  margin-top: 12px;
  color: red;
}
.sum{
  float: left;
  width: 30%;
  padding-left: 20px;
  padding-right: 5px;
}
.footer_price{
  color: red;
}
.footer_text{
  color: gray;
  margin-left: 45px;
  font-size: 13px;
  margin-top: 2%;
}
button::after {
  border: none;
}
button {
  border-radius:0;
}
.pay{
  background-color: red;
  height: 100%;
  color: white;
}
.kong{
