.sideslipMenu {
  background-color: gray;
  opacity: 0.8;
  width: 100%;
  top:0;
  left: 0;
  height: 100vh;
  position: absolute;
  z-index: 9;
}

.sideslipMenuItemlist {
  width: 100px;
  height: 100%;
  background-color:white;
  opacity: 0.9;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  border: 1px solid gray;
}

.sideslipMenuItem {
  flex: 0.1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: black;
  font-size: 30rpx;
  border-bottom: 1px solid gray;
}


.search{
  width: 65%;
