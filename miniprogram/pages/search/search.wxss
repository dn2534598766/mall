  border:1px solid slategray;
  border-radius: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  align-items: center;
  align-self: center;
  margin: auto;
  margin-top: 2%;
  justify-content: space-between;
  position: absolute;
  top: 0;
  right: 2%;
}