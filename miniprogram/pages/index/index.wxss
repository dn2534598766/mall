page{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}
.container{
  width: 100%;
  height: 100%;
}
swiper{
  margin: auto;
  margin-top: 2%;
  height: 26%;
  width: 95%;
  
}
.swiper-img{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}
.search{
  width: 80%;
  height: 5%;
  display: flex;
  flex-direction: row;
  border:1px solid slategray;
  border-radius: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  align-items: center;
  align-self: center;
  margin: auto;
  margin-top: 2%;
  justify-content: space-between;
}
.item-recommend{
  width: 100%;
  height: 13%;
  overflow: hidden;
}

.selected{
  width: 300rpx;
  height: 75rpx;
  margin: auto;
}
.selected-img{
  width: 25%;
  height: 100%;
  float: right;
}
.selected-img2{
  width: 25%;
  height: 100%;
  float: right;
}
.selected-text{
  height: 100%;
  width: 50%;
  float: right;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  line-height: 75rpx;
  font-weight: bold;
  text-align: center;
}
.recommend{
  width: 46.25%;
  background: white;
  height: 100%;
  display: flex;
  margin-top: 2%;
  margin-left: 2.5%;
  float: left;
}
.recommend2{
  width: 46.25%;
  background: white;
  height: 100%;
  display: flex;
  margin-top: 2%;
  margin-right: 2.5%;
  float: right;
}
.recommend-text{
  height: 100%;
  flex: 1;
}
.top{
  font-weight: bold;
  text-align: center;
  margin-top: 25%;
}
.bottom{
  text-align: center;
  color: darkgray;
}
.recommend-img{
  height: 100%;
  flex: 1;
}
.commodity{
  margin-top: 2%;
  height: 600rpx;
  width: 46.25%;
  margin-left: 2.5%;
  float: left;
}

.commodity-img{
  width: 100%;
  height: 390rpx;

}
.commodity-text{
  width: 100%;
  height: 210rpx;
  
}
.commodity-name{
  width: 100%;
  height: 40rpx;
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.commodity-label{
  width: 150rpx;
  height: 40rpx;
  background-color:pink;
  line-height: 40rpx;
  color: red;
  text-align: center;
}
.commodity-num{
  width: 100%;
  color:darkgray;
  height: 22%;
}
.commodity-line{
  width: 100%;
  height: 22%;
}
.commodity-price{
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: red;
}
.commodity-img2{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-right: 20rpx;
}