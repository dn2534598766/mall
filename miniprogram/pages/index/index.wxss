page{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}
.container{
  width: 100%;
  height: 100%;
}
swiper{
  margin: auto;
  margin-top: 2%;
  height: 26%;
  width: 95%;
  
}
.swiper-img{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}
.search{
  width: 80%;
  height: 5%;
  display: flex;
  flex-direction: row;
  border:1px solid slategray;
  border-radius: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  align-items: center;
  align-self: center;
  margin: auto;
  margin-top: 2%;
  justify-content: space-between;
}
.item-recommend{
  width: 100%;
  height: 13%;
  overflow: hidden;
}

.selected{
  width: 300rpx;
  height: 75rpx;
  margin: auto;
}
.selected-img{
  width: 25%;
  height: 100%;
  float: right;
}
.selected-img2{
  width: 25%;
  height: 100%;
  float: right;
}
.selected-text{
  height: 100%;
  width: 50%;
  float: right;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  line-height: 75rpx;
  font-weight: bold;
  text-align: center;
}
.recommend{
  width: 46.25%;
  background: white;
  height: 100%;
  display: flex;
  margin-top: 2%;
  margin-left: 2.5%;
  float: left;
}
.recommend2{
  width: 46.25%;
  background: white;
  height: 100%;
  display: flex;
  margin-top: 2%;
  margin-right: 2.5%;
  float: right;
}
.recommend-text{
  height: 100%;
  flex: 1;
}
.top{
  font-weight: bold;
  text-align: center;
  margin-top: 25%;
}
.bottom{
  text-align: center;
  color: darkgray;
}
.recommend-img{
  height: 100%;
  flex: 1;
}
.commodity{
  margin-top: 2%;
  height: 550rpx;
  width: 100%;

}
.commodity-left{
  height: 100%;
  width: 46.25%;
  margin-left: 2.5%;
  background-color:blue ;
  display: inline-block;
  float: left;
}
.commodity-right{
  height: 100%;
  width: 46.25%;
  margin-right: 2.5%;
  background-color: brown;
  display: inline-block;
  float: right;
}
.commodity-img{
  width: 100%;
  height: 65%;
}
.commodity-tex{
  width: 100%;
  height: 35%;
  display: inline-block;
}